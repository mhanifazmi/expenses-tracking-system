@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<div class="login-card login-dark" style="background-size: contain;">
    <div>
        <div>
            <a class="logo" href="#"><img style="max-width: 450px" class="img-fluid for-light" src="~/assets/images/logo/logo.png" alt="looginpage"><img style="max-width: 200px;" class="img-fluid for-dark" src="~/assets/images/logo/logo_dark.png" alt="looginpage"></a>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="login-main">
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h4>Register to account</h4>
                <p>Enter your email & password to login</p>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group mb-0">
                    <div class="text-end mt-3">
                        <button id="registerSubmit" class="btn btn-primary btn-block w-100" type="submit">Log in</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}